<h1>Title: <%= @book_info["title"] %></h1>
<h1>Author/s: <%= authors = @book_info["authors"].nil? ? "-" : @book_info["authors"].join(",") %></h1>
<h1>Publisher: <%= @book_info["publisher"] %></h1>
<h1>Published date: <%= @book_info["publishedDate"] %></h1>
<h1>Page count: <%= @book_info["pageCount"] %></h1>
<% image_url = @book_info["imageLinks"] ? @book_info["imageLinks"]["thumbnail"] : "" %>
<%= image_tag(image_url) if image_url%>
<h1>Description: <%= @book_info["description"].html_safe %></h1>
